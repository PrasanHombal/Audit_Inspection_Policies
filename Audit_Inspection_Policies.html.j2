<!DOCTYPE html>
<html>
  <head>
    <style>
      table,
      th,
      td {
        border: 1px solid black;
        padding: 5px;
      }

      /* Set background color to red if enabled is false */
      td.disabled {
        background-color: red;
      }
    </style>
    <link rel="stylesheet" type="text/css" href="css_final.css">
    <script src="/Audit_Inspection_Policies/filter.js"></script>
  </head>
  <body>
    <table id="emp-table">
      <thead>
        <tr>
          <th col-index = 1>Environment Name
		    <select class="table-filter" onchange="filter_rows()">
                    <option value="all"></option>
                </select>
				</th>
          <th col-index = 2>Policy Name
		    <select class="table-filter" onchange="filter_rows()">
                    <option value="all"></option>
                </select></th>
          <th col-index = 3>Enabled
		    <select class="table-filter" onchange="filter_rows()">
                    <option value="all"></option>
                </select>
				</th>
        </tr>
      </thead>
      <tbody>
        {% for item in json_array %}
        <tr>
          <td>{{ item.0.key }}</td>
          <td>{{ item.1.name }}</td>
          <td {% if not item.1.enabled %}class="disabled"{% endif %}>
            {{ item.1.enabled }}
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
	 <script>
        getUniqueValuesFromColumn();
        
    </script>
  </body>
</html>
